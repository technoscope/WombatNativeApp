<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gridimg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_bear"
                android:background="@drawable/bg_white_circle"/>
        </LinearLayout>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cpb_background_progressbar_color="#72FFFFFF"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress="20"
            app:cpb_progressbar_color="@color/dark_blue_app_color"
            app:cpb_round_border="true" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar2"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cpb_background_progressbar_color="#72FFFFFF"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress="60"
            app:cpb_progressbar_color="@color/light_blue_app_color"
            app:cpb_round_border="true" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar3"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cpb_background_progressbar_color="#72FFFFFF"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress="85"
            app:cpb_progressbar_color="@color/gree_app_color"
            app:cpb_round_border="true" />


    </RelativeLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circularProgressBar3"
        android:layout_gravity="center"
        android:fontFamily="@font/varela_round"
        android:gravity="center"
        android:text="user name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


</LinearLayout>